@model IEnumerable<WinFastLoseFaster.Models.Game>
 
@using WinFastLoseFaster.Models;
<link rel="stylesheet" type="text/css" href="~/Content/Coinflip.css" />

@{
    ViewBag.Title = "Coinflip";
}
<div id="title">
    <h2>Coinflip-Game</h2>
    <h5>Awesome coinflip game where you can coinflip a fucking coin with another m8 of yours or an enemy mohhahaha</h5>
</div>
<div class="container">
    <div class="row" id="CreateGame">
        <!--<button type="submit" id="knapp" class="btn-success">Join game</button>-->

        <form method="post" action="CreateCoinflip">
            <input type="text" placeholder="Summa" id="summa" name="TextSum"><br>
            <input class="btn-danger" type="submit" value="Skapa spel" id="knapp">
        </form>
    </div>
</div>
<br>
    @foreach (var coinflip in Model)
    {
        <div class="coinflipGame row">

            @Html.DisplayFor(coinflipGame => coinflip.users[0].Username)
            Wager: @Html.DisplayFor(coinflipGame => coinflip.Userbets.FirstOrDefault().Wager)
            @*@Html.DisplayFor(coinflipGame => coinflip.Timestamp)*@

            <form action="JoinCoinflip" method="post">
                <input type="number" value="@Html.DisplayFor(coinflipGame => coinflip.Id)" name="coinflipGameId" hidden readonly />
                <input  class="btn-success" type="submit" value="Join Game" />

            </form>
        </div>
        <br>
    }



    

